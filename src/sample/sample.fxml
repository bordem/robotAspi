                layoutY="245" layoutX="100"/>
                <Button id="buttonDroite" fx:id="Droite"  mnemonicParsing="false" text="Droite" onAction="#buttonDirectionDroite"
                layoutX="165" layoutY="285"/>
                <Button id="buttonGauche" fx:id="Gauche" mnemonicParsing="false" text="Gauche" onAction="#buttonDirectionGauche"
                layoutX="25" layoutY="285"/>
                <Button id="buttonStart" fx:id="Demarrer" mnemonicParsing="false" onAction="#initialiser"
                    layoutX="300" layoutY="600"    text="Demarrer"/>
                <Canvas fx:id="canvas" layoutX="440" height="800" width="540" />
                <Circle fx:id="circle" radius="13" fill="white"/>

                <Text fx:id="textTemps" layoutX="0" layoutY="25" text=" "><font><Font size="12"/></font></Text>
                <Text fx:id="textDeplacement" layoutX="0" layoutY="50" text=" " ></Text>
