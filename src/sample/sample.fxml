                <Text fx:id="textReservoir" layoutX="0" layoutY="140" text="Reservoir a poussière :" ><font><Font size="12"/></font></Text>
                <Text fx:id="textQuantitePoussiere" layoutX="0" layoutY="200" text="Le robot a aspiré : " ><font><Font size="12"/></font></Text>
                <Button id="Option" fx:id="Option" mnemonicParsing="false" text="Option" onAction="#configuration"
                layoutY="600" layoutX="25"/>
            </children>
        </Group>
    </children>
</Group>
