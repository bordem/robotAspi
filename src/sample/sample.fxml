<Group xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
       fx:controller="sample.Controller">
    <children>
        <Group fx:id="root"  >
            <children>
                <Button id="buttonBas" fx:id="Bas" mnemonicParsing="false"  text="Bas" onAction="#buttonDirectionBas"
                layoutX="100" layoutY="325"/>
